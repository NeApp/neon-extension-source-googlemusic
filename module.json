{
  "title": "Google Play Music",

  "content_scripts": [
    {
      "id": "main",

      "conditions": [
        { "pageUrl": { "hostEquals": "play.google.com",  "pathPrefix": "/music" } }
      ],

      "matches": [
        "*://play.google.com/music/*"
      ],

      "js": [
        "Common.js",
        "Modules/Common.js",
        "Modules/neon-extension-source-googlemusic/Main.js"
      ]
    }
  ],
  "origins": [
    "*://play.google.com/music/*"
  ],

  "services": [
    "configuration",

    "source/activity",
    "source/library"
  ],
  "web_accessible_resources": [
    "Modules/neon-extension-source-googlemusic/Shim.js"
  ],

  "webpack": {
    "modules": {
      "Shim": { "entry": true }
    }
  }
}
